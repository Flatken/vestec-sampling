<ServerManagerConfiguration>
  <ProxyGroup name="filters">
   <SourceProxy name="VestecSamplingAlgorithm" class="VestecSamplingAlgorithm" label="VestecSamplingAlgorithm">
     <Documentation
        long_help="This filters samples the (unsteady) input grid using streakline snippets. It uses the seeds defined in the input"
        short_help="Sampling input data using streakline snippes">
     </Documentation>
     <InputProperty
        name="Grid"
        port_index="0"
        command="SetInputConnection">
           <ProxyGroupDomain name="groups">
             <Group name="sources"/>
             <Group name="filters"/>
           </ProxyGroupDomain>
           <DataTypeDomain name="input_type">
             <DataType value="vtkDataSet"/>
           </DataTypeDomain>
      </InputProperty>

      <InputProperty
        name="Seeds"
        port_index="1"
        command="SetInputConnection">
           <ProxyGroupDomain name="groups">
             <Group name="sources"/>
             <Group name="filters"/>
           </ProxyGroupDomain>
           <DataTypeDomain name="input_type">
             <DataType value="vtkDataSet"/>
           </DataTypeDomain>
      </InputProperty>

      <DoubleVectorProperty name="IntegrationDuration"
                        command="SetIntegrationDuration"
                        number_of_elements="1"
                        default_values="1">
      </DoubleVectorProperty>

      <StringVectorProperty name="SelectInputVectors"
                            label="Vectors"
                            command="SetInputArrayToProcess"
                            number_of_elements="5"
                            element_types="0 0 0 0 2"
                            animateable="0">
        <ArrayListDomain name="array_list"
                         attribute_type="Vectors"
                         input_domain_name="inputs_array">
          <RequiredProperties>
            <Property name="Grid"
                      function="Input" />
          </RequiredProperties>
        </ArrayListDomain>
       <!-- In versions of ParaView greater than 5.6, the FieldDataDomain element is not needed. -->
        <FieldDataDomain name="field_list">
          <RequiredProperties>
            <Property name="Grid"
                      function="Input" />
          </RequiredProperties>
        </FieldDataDomain>
      </StringVectorProperty>
 
      <Hints>
        <ShowInMenu category="VESTEC - Sampling" />
      </Hints>
   </SourceProxy>
 </ProxyGroup>
</ServerManagerConfiguration>
